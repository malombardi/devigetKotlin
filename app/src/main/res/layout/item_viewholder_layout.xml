<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_clicked"
        android:layout_width="@dimen/m_1"
        android:layout_height="@dimen/m_1"
        android:layout_marginTop="@dimen/m_1"
        android:layout_marginStart="@dimen/m_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_1"
        android:layout_marginEnd="@dimen/m_1"
        android:layout_toEndOf="@+id/item_clicked"
        android:textColor="@color/black"
        android:textSize="@dimen/title_size"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:id="@+id/item_thumbnail"
        android:layout_below="@+id/item_title"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="@dimen/m_6"
        android:layout_height="@dimen/m_6"
        android:padding="@dimen/m_2"
        android:layout_below="@+id/item_thumbnail"
        android:id="@+id/item_delete"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_delete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/m_6"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item_delete"
        android:layout_below="@+id/item_thumbnail"
        android:id="@+id/item_comments"
        android:gravity="center_vertical"
        android:textSize="@dimen/time_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/m_6"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item_comments"
        android:layout_below="@+id/item_thumbnail"
        android:id="@+id/item_time"
        android:gravity="center_vertical"
        android:textSize="@dimen/time_text_size"/>


</RelativeLayout>